<h1>Searching for - <%= @search_term %></h1>

<table border="1">
  <tr>
  	<th>Image</th>
  	<th>Title</th>
  	<th>Rank</th>
  </tr>
  <% @recipes.each do |recipe| %>
    <tr >
      <td>
        <a href=<%=recipe["image_url"]%>>
          <img src=<%=recipe["image_url"]%> width="100" height="100" /><a href=<%=recipe["image_url"]%>>
        </a>
        
        
      </td>
      <td>

        <a href=<%=recipe["f2f_url"]%>>
          <%= sanitize recipe["title"] %>
        </a>
        
      </td>
      <td><%= recipe["social_rank"] %></td>
    </tr>
  <% end %>
</table>